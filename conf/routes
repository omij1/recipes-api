# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#
# User resource
#

POST          /user                                            controllers.UserController.createUser
GET           /user/:id_user                                   controllers.UserController.retrieveUser(id_user: Long)
PUT           /user/:id_user                                   controllers.UserController.updateUser(id_user: Long)
DELETE        /user/:id_user                                   controllers.UserController.deleteUser(id_user: Long)
GET           /user/nick/:nick                                 controllers.UserController.retrieveUserByNick(nick: String)
GET           /users/:page                                     controllers.UserController.retrieveUserCollection(page: Integer)
GET           /users/name/:name/page/:page                     controllers.UserController.retrieveUserByName(name: String, page: Integer)
GET           /users/surname/:surname/page/:page               controllers.UserController.retrieveUserBySurname(surname: String, page: Integer)
GET           /users/fullname/:name/:surname/page/:page        controllers.UserController.retrieveUserByFullName(name: String, surname: String, page: Integer)
GET           /users/city/:city/page/:page                     controllers.UserController.retrieveUserByCity(city: String, page: Integer)

# An example controller showing a sample home page
GET           /                                                controllers.HomeController.index
# An example controller showing how to use dependency injection
GET           /count                                           controllers.CountController.count
# An example controller showing how to write asynchronous code
GET           /message                                         controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Rutas de recetas

POST		/recipe					   	controllers.RecipeController.createRecipe
GET		/recipe/:id				   	controllers.RecipeController.retrieveRecipe(id: Long)
PUT		/recipe/:id				   	controllers.RecipeController.updateRecipe(id: Long)
DELETE	/recipe/:id				   	controllers.RecipeController.deleteRecipe(id: Long)

GET 		/recipes/:page					   	controllers.RecipeController.retrieveRecipeCollection(page: Integer)

# Buscar una receta por su título
GET 		/recipes/search				controllers.RecipeController.searchRecipe(title: String)

# Rutas de categoría

POST		/category				   	controllers.CategoryController.createCategory
GET		/category/:id			   	controllers.CategoryController.retrieveCategory(id: Long)
PUT		/category/:id			   	controllers.CategoryController.updateCategory(id: Long)
DELETE	/category/:id			   	controllers.CategoryController.deleteCategory(id: Long)

# Obtener las categorías de recetas
GET 		/categories/:page				   	controllers.CategoryController.retrieveCategoryCollection(page: Integer)

# Obtener las recetas de una categoría
GET 		/category/:id/recipes/list 	controllers.CategoryController.retrieveRecipesByCategory(id: Long)
