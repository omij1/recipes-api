# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#
# User resource
#

POST          /user                             controllers.UserController.createUser
GET           /user/:id_user                    controllers.UserController.retrieveUser(id_user: Long)
PUT           /user/:id_user                    controllers.UserController.updateUser(id_user: Long)
DELETE        /user/:id_user                    controllers.UserController.deleteUser(id_user: Long)
GET           /user/nick/:nick                  controllers.UserController.retrieveUserByNick(nick: String)
GET           /users                            controllers.UserController.retrieveUserCollection()
GET           /users/name/:name                 controllers.UserController.retrieveUserByName(name: String)
GET           /users/surname/:surname           controllers.UserController.retrieveUserBySurname(surname: String)
GET           /users/fullname/:name             controllers.UserController.retrieveUserByFullName(name: String, surname: String)
GET           /users/city/:city                 controllers.UserController.retrieveUserByCity(city: String)

# An example controller showing a sample home page
GET           /                                 controllers.HomeController.index
# An example controller showing how to use dependency injection
GET           /count                            controllers.CountController.count
# An example controller showing how to write asynchronous code
GET           /message                          controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                     controllers.Assets.versioned(path="/public", file: Asset)

# Rutas de recetas

POST          /recipe                           controllers.RecipeController.createRecipe(apiKey: String)
GET           /recipe/:id                       controllers.RecipeController.retrieveRecipe(id: Long)
PUT           /recipe/:id                       controllers.RecipeController.updateRecipe(id: Long, apiKey: String)
DELETE        /recipe/:id                       controllers.RecipeController.deleteRecipe(id: Long, apiKey: String)

GET           /recipes                          controllers.RecipeController.retrieveRecipeCollection(page: Integer)

# Buscar una receta por su título
GET           /recipes/search                   controllers.RecipeController.searchRecipe(title: String)

# Rutas de categoría

POST          /category                         controllers.CategoryController.createCategory(apiKey: String)
GET           /category/:id                     controllers.CategoryController.retrieveCategory(id: Long)
PUT           /category/:id                     controllers.CategoryController.updateCategory(id: Long, apiKey: String)
DELETE        /category/:id                     controllers.CategoryController.deleteCategory(id: Long, apiKey: String)

# Obtener las categorías de recetas
GET           /categories                       controllers.CategoryController.retrieveCategoryCollection(page: Integer)

# Obtener las recetas de una categoría
GET           /category/:id/recipes/list        controllers.CategoryController.retrieveRecipesByCategory(id: Long)
