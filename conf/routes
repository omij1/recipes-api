# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Rutas de recetas

POST		/recipe					   	controllers.RecipeController.createRecipe
GET		/recipe/:id				   	controllers.RecipeController.retrieveRecipe(id)
PUT		/recipe/:id				   	controllers.RecipeController.updateRecipe(id)
DELETE	/recipe/:id				   	controllers.RecipeController.deleteRecipe(id)

GET 		/recipes					   	controllers.RecipeController.retrieveRecipeCollection(page: Integer)

# Buscar una receta por su título
GET 		/recipes/search				controllers.RecipeController.searchRecipe(title: String)

# Rutas de categoría

POST		/category				   	controllers.CategoryController.createCategory
GET		/category/:id			   	controllers.CategoryController.retrieveCategory(id)
PUT		/category/:id			   	controllers.CategoryController.updateCategory(id)
DELETE	/category/:id			   	controllers.CategoryController.deleteCategory(id)

# Obtener las categorías de recetas
GET 		/categories				   	controllers.CategoryController.retrieveCategoryCollection(page: Integer)

# Obtener las recetas de una categoría
GET 		/category/:id/recipes/list 	controllers.CategoryController.retrieveRecipesByCategory(id)